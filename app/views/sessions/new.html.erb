<h1>Login</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <% if flash[:alert] %>
      <p id="notice"><%= flash[:alert] %></p>
    <% end %>
    <%= form_tag login_url do %>
      <div class="field">
        <%= label_tag :email %>
        <%= email_field_tag :email %>
      </div>
      <div class="field">
        <%= label_tag :password %>
        <%= password_field_tag :password %>
      </div>
      <%= submit_tag "Log in", class: "btn btn-primary col-md-2 " %>
      <span class="col-md-3">
      <%= link_to 'Register', new_user_path, class: "btn btn-primary" %>
      </span>
    <% end %>
  </div>
</div>
