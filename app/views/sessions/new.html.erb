<h1>Login</h1>
<% if flash[:alert] %>
  <p id="notice"><%= flash[:alert] %></p>
<% end %>
<div >
  <div>
    <%= form_tag login_url do %>
        <%= label_tag :email %>
        <%= email_field_tag :email %>

        <%= label_tag :password %>
        <%= password_field_tag :password %>
        <br>
        <%= submit_tag "Log in" %>
    <% end %>
    <%= link_to 'Register', new_user_path %>
  </div>
</div>
